<style>
    .learn-more {
        background-color: aliceblue;
    }

        .learn-more:hover {
            background-color: springgreen;
        }

    .adds-div {
        height: 70%;
    }

    .broadcast-div {
        position: relative;
        height: 250px;
        top: 150px;
        left: 10px;
    }
    
