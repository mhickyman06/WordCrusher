<section class="meet-speller mt-4 ">
    <h1 class="meet-speller-head">
        Meet the Spellers
    </h1>
    @*<div class="">*@
<div id="carouselExampleControls" class="carousel slide container" data-interval="false">

    <div class="row " style="margin-left:60px">
        @for (int i = 0; i <= Model.Spellers.Count() / 6; i++)
        {

            @foreach (var spellers in Model.Spellers.Skip(i * 6).Take(6))
            {
                if (i == 0)
                {
                    var spellerimages = Model.SpellersImgs.FirstOrDefault(x => x.SpellersId == spellers.SpellersId);
                    var imagepath = System.IO.Path.Combine("~/content/Images/", spellerimages.ImagePath);
                    <div class="col-lg-2 col-md-3 col-sm-6 col-6">
                        <div class="carousel-item active" style="width:120px">
                            <div class="mb-3">
                                <img class="spellers-img mb-4 text-center" src="@Url.Content(imagepath)" /><br />
                                <p class="text-center">@spellers.FullName</p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    var spellerimages = Model.SpellersImgs.FirstOrDefault(x => x.SpellersId == spellers.SpellersId);
                    var imagepath = System.IO.Path.Combine("~/content/Images/", spellerimages.ImagePath);
                    <div class="col-lg-2 col-md-3 col-sm-6 col-6">
                        <div class="carousel-item " style="width:120px">
                            <div class="mb-3">
                                <img class="spellers-img mb-4 text-center" src="@Url.Content(imagepath)" /><br />
                                <p class="text-center">@spellers.FullName</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
