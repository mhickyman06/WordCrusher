        position: absolute;
        height: 100px;
        width: inherit;
        border-color: aqua;
        transform: skew(30deg);
    }

    .divider {
        position: absolute;
        top: 0;
        left: 50%;
        margin-top: 0px;
        margin-bottom: 0px;
        height: 100%;
        border-left: 1px solid black;
    }

    .broadcast-head {
        margin-bottom: 60px;
        font-size: 30px;
        font-family: cursive;
        color: brown;
        text-decoration: overline;
        text-align:center;
    }



    .meet-speller {
        margin-bottom: 50px;
        background-color: #823a9c;
    }

    .section1 {
        position: relative;
        background: url(../images/registerpic.jpg);
        background-size: cover;
        height: 200px;
        border-radius: 5px;
        width:90%;
        margin:auto;
    }
    .spellers-img{
        width:100%;
        height:120px;
        border-radius:50%;
    }
    svg {
        position: absolute;
        bottom: -10px;
        left: 0px;
        width: 100%;
        height: 100px;
        display: block;
    }

    .broadcast-text {
        position: absolute;
        top: 120px;
        left: 150px;
        transform: rotate( -14deg);
